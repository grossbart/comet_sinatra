<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html lang='en' xml:lang='en' xmlns='http://www.w3.org/1999/xhtml'>
  <head>
    <title>Comet Sinatra Example</title>
    <meta content='text/html; charset=utf-8' http-equiv='Content-Type' />
    <meta content='en-en' http-equiv='Content-Language' />
    <script src='/javascripts/jquery-1.3.min.js' type='text/javascript'></script>
    <script src='/javascripts/json2.js' type='text/javascript'></script>
    <script src='/javascripts/comet.js' type='text/javascript'></script>
    <script src='/javascripts/application.js' type='text/javascript'></script>
    <style type="text/css" media="screen">
    p {
      color: #999;
      font-family: helvetica, sans-serif;
    }
    #checkboard {
      margin: 0; padding: 0;
      list-style: none;
      overflow: hidden;
      border: 1px solid #eee;
      width: 900px;
    }
    #checkboard li {
      display: block;
      float: left;
      width: 30px;
      height: 30px;
   }
    #checkboard li:hover {
      background: #eee;
    }
    #checkboard li.active  {
      background: #000;
    }
   </style>
  </head>
  <body>
   <ul id="checkboard">
      <% 600.times do |i| %>
      <li id="pixel-<%= i %>"></li>
      <% end %>
    </ul>
   <p>Be sure to try this with two browser windows open: what you
     paint here will be transferred to the other window!</p>
  </body>
</html>
